<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ex2.shenkar.todolist.NewEditTask">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinners"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/spn_priority"
            android:spinnerMode="dialog" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/member"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_below="@+id/spinners"
        android:orientation="horizontal">
        <EditText
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/etLoc"
            android:singleLine="true"
            android:hint="Map Address"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spn_floor"
            android:hint="Floor"
            android:spinnerMode="dialog" />

        </LinearLayout>

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/taskDesk"
        android:singleLine="true"
        android:hint="Description"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendarView"
        android:longClickable="false"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/btnNewTask"
        android:layout_below="@+id/taskDesk" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Task"
        android:id="@+id/btnNewTask"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
